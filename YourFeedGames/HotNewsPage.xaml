<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourFeedGames.HotNewsPage"
             Title="Hot News">
    <ContentPage.Content>
        <CollectionView x:Name="HotNewsCollectionView"
                        ItemsSource="{Binding HotNewsAtivas}"
                        EmptyView="Nenhuma notÃ­cia quente encontrada."
                        Margin="16,16,16,16">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame HasShadow="True" CornerRadius="12" Padding="14" Margin="0,0,0,14" BackgroundColor="{DynamicResource CardBackgroundColor}">
                        <Label Text="{Binding descricao}" FontSize="16" LineBreakMode="WordWrap" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>