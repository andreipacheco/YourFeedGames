<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourFeedGames.MainPage"
             xmlns:converters="clr-namespace:YourFeedGames.Converters"
             Title="Feed de Notícias">


    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        <!-- Barra superior com título e botões -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto,Auto" Margin="0,0,0,10">
            <!-- Título -->
            <Label Grid.Column="0" 
                   Text="Your Feed Games" 
                   FontSize="Title" 
                   FontAttributes="Bold" 
                   VerticalOptions="Center" />

            <!-- Botão de Refresh -->
            <Button Grid.Column="1"
                    ImageSource="sync_24dp.png"
                    Clicked="OnRefreshClicked"
                    WidthRequest="50"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="0,0,5,0" />

            <!-- Botão de Hot News -->
            <Button Grid.Column="2"
                    ImageSource="mode_heat_red_24dp.png"
                    Clicked="OnHotNewsClicked"
                    WidthRequest="50"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="5,0,5,0" />

            <!-- Botão de Configurações -->
            <Button Grid.Column="3" 
                    ImageSource="settings_24dp.png"
                    Clicked="OnSettingsClicked"
                    WidthRequest="50"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="5,0,0,0" />
        </Grid>


        <!-- Conteúdo principal -->
        <Grid Grid.Row="1">
            <!-- Container de loading -->
            <StackLayout x:Name="loadingContainer" 
                        IsVisible="False"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Spacing="20">
                <ActivityIndicator x:Name="loadingIndicator"
                                     IsRunning="True" 
                                     Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Secondary}}"
                                     HeightRequest="50"
                                     WidthRequest="50"/>    

                <Label x:Name="loadingLabel" 
                       Text="Carregando feeds de notícias..." 
                       FontSize="16"
                       HorizontalOptions="Center"/>

                <ProgressBar x:Name="loadingProgress" 
                             Progress="0"
                             ProgressColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Secondary}}"
                             WidthRequest="300"/>

                <Button x:Name="cancelLoadingButton" 
                        Text="Cancelar" 
                        Clicked="OnCancelLoadingClicked"
                        IsVisible="False"
                        HorizontalOptions="Center"/>
            </StackLayout>

            <!-- ScrollView com as notícias -->
            <ScrollView x:Name="feedScrollView">
                <CollectionView ItemsSource="{Binding NewsFeed}" 
                                EmptyView="Nenhuma notícia disponível no momento">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray" 
                                   CornerRadius="10" 
                                   Margin="0,5,0,10" 
                                   Padding="15">    
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                      RowSpacing="8">
                                    <!-- Título da notícia -->
                                    <Label Grid.Row="0" 
                                           Text="{Binding Title}" 
                                           FontSize="18" 
                                           FontAttributes="Bold" 
                                           LineBreakMode="WordWrap"/>

                                    <!-- Descrição da notícia (se disponível) -->
                                    <Label Grid.Row="1" 
                                           Text="{Binding Description}" 
                                           FontSize="14"
                                           IsVisible="{Binding Description, Converter={StaticResource StringNotEmptyConverter}}"
                                           Margin="0,5,0,0"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="3"/>   

                                    <!-- Fonte da notícia -->
                                    <StackLayout Grid.Row="2" Orientation="Horizontal" Spacing="5">
                                        <Label Text="Fonte:" 
                                               FontSize="12" 
                                               TextColor="Gray"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding Source}" 
                                               FontSize="12" 
                                               TextColor="Gray"/>   
                                    </StackLayout>

                                    <!-- Botão "Ler mais" -->
                                    <Button Grid.Row="3" 
                                            Text="Ler mais" 
                                            CommandParameter="{Binding Url}" 
                                            Clicked="OnReadMoreClicked"
                                            HorizontalOptions="End"
                                            WidthRequest="100"
                                            HeightRequest="40"
                                            Margin="0,5,0,0"
                                            BackgroundColor="#3498db"
                                            TextColor="White"/> 
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </Grid>

        <!-- Barra de status inferior -->
        <Label x:Name="statusLabel"
           Grid.Row="2"
           Text=""
           FontSize="12"
           TextColor="Gray"
           Margin="0,10,0,0"
           HorizontalOptions="Center"/>
    </Grid>
</ContentPage>